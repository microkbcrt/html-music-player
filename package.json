{
  "name": "Kbcrt播放器",
  "version": "1.0.0",
  "description": "A local music player with lyrics and visualization",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "kbcrt",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "jsmediatags": "^3.9.5"
  },
  "build": {
    "appId": "com.kbcrt.musicplayer",
    "productName": "AMPlayer",
    "win": {
      "target": "nsis",
      "icon": "icon.ico" 
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "fileAssociations": [
      {
        "ext": ["mp3", "flac", "wav", "ogg", "m4a"],
        "name": "Audio File",
        "role": "Viewer"
      }
    ]
  }
}
